<h1>Result</h1>
<%= @words %>
<% if @ans == 'correct' %>
  <h3><strong>Congratulations</strong> <%= @answer %> is a valid English word!</h3>
<% elsif @ans == 'not in grid' %>
  <h3>Sorry but <strong><%= @answer %></strong> can't be built out of <%= @grid_letters.join(', ') %></h3>
<% elsif @ans == 'not in dict' %>
   <h3>Sorry but <strong><%= @answer %></strong> does not seem to be a valid English word</h3>
<% end %>

<%= link_to "Play again", "/new" %>
