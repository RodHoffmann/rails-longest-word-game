<div class="row d-flex justify-content-center">
  <div class="col-md-6">
  <h1 class="text-center">New game</h1>
  <div class="d-flex p-2 bd-highlight">
  <% @random_letters.each do |letter| %>
    <div class="col-1 p-1 bg-primary text-white text-center m-3 shadow p-3 rounded"><%= p letter %></div>
  <% end %>
  </div>
  <form action="/score" method="post" data-turbo="false" class="container col-md-6">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="basic-url" class="form-label">What is the longest word you can find?</label>
    <div class="input-group form-outline w-80">
      <input id="token" name="token" type="hidden"  value="<%= @random_letters.join('') %>" type="hidden"/>
      <input type="text" name="answer" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2">
      <button class="btn btn-primary" type="submit" id="button-addon2" >Play</button>
    </div>
  </form>
  </div>
</div>
